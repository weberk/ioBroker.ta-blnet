{
  "name": "iobroker.uvr16xx-blnet",
  "version": "1.0.1",
  "description": "An ioBroker adapter for reading inputs and outputs of the UVR16xx controller from Technische Alternative using BL-NET.",
  "author": {
    "name": "Klaus Weber",
    "email": "klausatweberesprit@gmail.com"
  },
  "homepage": "https://github.com/weberk/ioBroker.uvr16xx-blnet",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "BL-NET",
    "UVR1611",
    "UVR16x2",
    "solar",
    "BUSO",
    "Technische",
    "Alternative"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/weberk/ioBroker.uvr16xx-blnet.git"
  },
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/adapter-react": "^2.2.4",
    "@iobroker/testing": "^5.0.0",
    "@material-ui/core": "^4.12.4",
    "@tsconfig/node20": "^20.1.4",
    "@types/chai-as-promised": "^7.1.8",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.9.0",
    "@types/proxyquire": "^1.3.31",
    "@types/react-dom": "^17.0.25",
    "@types/react": "^17.0.83",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "chai-as-promised": "^7.1.2",
    "chai": "^4.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint": "^8.57.1",
    "mocha": "^10.8.2",
    "prettier": "^3.3.3",
    "proxyquire": "^2.1.3",
    "react-dom": "^17.0.2",
    "react": "^17.0.2",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "typescript": "~5.0.4"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "prebuild": "rimraf admin/build",
    "build": "build-adapter react",
    "watch": "build-adapter react --watch",
    "prebuild:react": "rimraf admin/build",
    "build:react": "build-adapter react",
    "watch:react": "build-adapter react --watch",
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint --ext .js,.jsx .",
    "translate": "translate-adapter",
    "release": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes"
  },
  "bugs": {
    "url": "https://github.com/weberk/ioBroker.uvr16xx-blnet/issues"
  },
  "readmeFilename": "README.md"
}
